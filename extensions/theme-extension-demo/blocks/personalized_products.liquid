{% assign products = block.settings.products %}

<div class="personalized-products">
  <h2>{{ block.settings.title }}</h2>
  <p>{{ block.settings.description }}</p>
  <a href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
</div>

{% for product in products %}
  <div class="personalized-product">
    <h3>{{ product.title }}</h3>
    <p>{{ product.description }}</p>
  </div>
{% endfor %}

{% schema %}
{
  "name": "Personalized Products",
  "target": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Title" },
    { "type": "text", "id": "description", "label": "Description" },
    { "type": "text", "id": "button_text", "label": "Button Text" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
  ]
}
{% endschema %}

